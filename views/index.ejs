            <a href="./app.apk" id="download">바로 다운받기</a>
    <script>
        var d = {}
        axios.get('/getData')
                .then(function (data) {
                    d = {
                        datasets : [{
                            data : data.data.map(x=>x.data),
                            backgroundColor: ['#3e4684','#777faa','#7c92e5','#6aa3ce']
                        }],
                        labels: data.data.map(x=>x.label)
                    }
                    var ctx = document.getElementById("myChart").getContext('2d');
                    var myPieChart = new Chart(ctx, {
                        type: 'pie',
                        data: d,
                    });
                })
    </script>
